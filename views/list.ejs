<%- include("header")-%>

    <div class="box" id="heading">
        <h1>
            <%= listTitle %>
        </h1>
    </div>

    <div class="box">

        <% for (var i=0; i<listNewItems.length; i++){ %>
            <div class="item">
                <input type="checkbox">
                <p>
                    <%= listNewItems[i] %>
                </p>
            </div>
                <% } %>

                <form action="/" method="post">
                    <input type="text" name="newItem" placeholder="Add a task here:" autocomplete="off">
                    <button type="submit" name="list" value="<%= listTitle %>">+</button><br>
                </form>

    </div>

    <%- include("footer")-%>

